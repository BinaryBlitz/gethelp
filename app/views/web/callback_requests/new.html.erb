<div class="popup" id="popupi">
  <img id="close-icon" src="/images/icon-close.png">
  <div class="container">
  <div class="inline-block">
      <div class="col-sm-12">
        <div class="align-center">
          <img class="CallbackIcon" src="/images/icon-callback.png">
        </div>
        <div class="callback-name">Оставьте контактный номер телефона и мы перезвоним вам</div>
      </div>
      <%= form_for [:web, CallbackRequest.new], url: { controller: 'callback_requests', action: 'create' } do |f| %>
        <div class="row">
          <div class="col-md-offset-4 col-md-4 col-sm-12 col-xs-12">
            <%= f.label :name, class: 'form-label' %>
            <%= f.text_field :name, placeholder: 'Имя', class: 'input placeholder', id: 'cbName', required: true %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-offset-4 col-md-4 col-sm-12 col-xs-12">
            <%= f.label :phone_number, class: 'form-label' %>
            <%= f.telephone_field :phone_number, placeholder: '+7 (900) 000 00 00', class: 'input', id: 'cbPhone', required: true %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 btnHandler">
            <%= f.submit 'Заказать обратный звонок', class: 'form-btn' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

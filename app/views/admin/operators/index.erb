<h1>Заказы</h1>

<div class="form-group">
  <%= link_to 'Новый оператор', new_admin_operator_path, class: 'btn btn-default' %>
</div>

<div class="table-responsive">
  <table class="table">
    <thead>
      <th>Имя</th>
      <th>Email</th>
      <th></th>
    </thead>
    <tbody>
      <% @operators.each do |operator| %>
        <tr>
          <td><%= operator.name %></td>
          <td><%= operator.email %></td>
          <td>
            <%= link_to 'Изменить', edit_admin_operator_path(operator), class: 'btn btn-default' %>
            <%= link_to 'Удалить', [:admin, operator], method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @operators %>

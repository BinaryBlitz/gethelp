<h1>Заказы</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <th></th>
      <th>№</th>
      <th>Время исполнения</th>
      <th>Предмет</th>
      <th>Тип</th>
      <th>Оператор</th>
      <th>Статус</th>
      <% if current_admin.admin? %>
        <th>Цена</th>
        <th>Заказчик</th>
      <% end %>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <% unless order.viewed_by_operator? %>
              <span class="label label-success">●</span>
            <% end %>
          </td>
          <td><%= link_to order.id, [:admin, order] %></td>
          <td><%= order.due_by.to_formatted_s(:short) %></td>
          <td><%= order.course %></td>
          <td><%= order.category_text %></td>
          <td><%= order.operator&.name %></td>
          <td>
            <span class="label <%= class_for_status(order.status) %>">
              <%= order.status_text %>
            </span>
          </td>
          <% if current_admin.admin? %>
            <td><%= order.sum %></td>
            <td><%= link_to order.phone_number, user_id: order.user_id %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @orders %>

<h1>Уведомления</h1>

<%= form_tag admin_notifications_path, method: :post do %>
  <div class="form-group">
    <%= label_tag :message, 'Сообщение' %>
    <%= text_field_tag :message, '', placeholder: 'Сообщение', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= submit_tag 'Отправить', class: 'btn btn-danger', data: { confirm: 'Вы уверены?' } %>
  </div>
<% end %>

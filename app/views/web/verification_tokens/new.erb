<h1>Личный кабинет</h1>

<%= form_for [:web, @verification_token] do |f| %>
  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, value: '+7', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Войти', class: 'btn btn-default' %>
  </div>
<% end %>
